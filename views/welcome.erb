<!DOCTYPE HTML>
<html>
  <head>
    <link href="css/application.css" rel="stylesheet" type="text/css">
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
    <script src="game_piece_selection.js" type="text/javascript"></script>
  </head>
  <body>
    <form method="post" action="/new_game">

      <div class ="player_one">
        <h2>Player 1:</h2>
        <select class="button" name="player_one_type">
          <option value="Human">Human</option>
          <option value="ai">AI</option>
        </select>
        <div>
          <select class="button" id="player_one_piece" name="player_one_piece">
            <option value="X">X</option>
            <option value="O">O</option>
          </select>
        </div>
      </div>

      <div class ="player_two">
        <h2>Player 2:</h2>
        <select class="button" name="player_two_type">
          <option value="Human">Human</option>
          <option value="ai">AI</option>
        </select>
        <div>
          <select class="button"  name="player_two_piece">
            <option value="O">O</option>
            <option value="X">X</option>
          </select>
        </div>
      </div>
      <div>
        <center>
          <input class="start_button" type="submit" value="Start">
        </center>
      </div>
    </form>
  </body>
</html>